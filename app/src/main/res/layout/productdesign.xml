<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:padding="15dp"
        android:layout_margin="8dp"
       android:outlineSpotShadowColor="#000"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/ivProductImg"
            android:src="@drawable/b"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product No 1"
                android:gravity="start"
                android:textSize="30sp"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:id="@+id/tvProductName"
                android:textStyle="bold"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbProductRating"
                android:scaleX="0.85"
                android:scaleY="0.75"
                android:progressTint="#88000000"
                android:progressBackgroundTint="#000"
                android:layout_gravity="left"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 3000"
                    android:paddingLeft="15dp"

                    android:id="@+id/tvProductSalePrice"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 2000"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:id="@+id/tvProductCurrentPrice"

                    android:textColor="#E91E63"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>